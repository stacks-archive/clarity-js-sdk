{
  "name": "create-clarity-dev",
  "version": "0.1.13-alpha.1",
  "description": "An npm initializer to setup a Clarity development environment",
  "author": "Blockstack <engineering@blockstack.com> (https://blockstack.com/)",
  "license": "MIT",
  "main": "lib/index.js",
  "bin": "./cmd/index.js",
  "repository": "blockstack/clarity-js-sdk",
  "homepage": "https://github.com/blockstack/clarity-js-sdk/tree/master/packages/create-clarity-dev#readme",
  "bugs": "https://github.com/blockstack/clarity-js-sdk/issues",
  "publishConfig": {
    "access": "public",
    "scope": "blockstack"
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "shx rm -rf ./lib tsconfig.build.tsbuildinfo",
    "compile": "tsc --build tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "lint": "tslint -p tsconfig.json 'src/**/*.ts' 'test/**/*.ts'",
    "lint-fix": "tslint --fix -p tsconfig.json 'src/**/*.ts' 'test/**/*.ts'",
    "test": "npm run build && nyc mocha"
  },
  "engines": {
    "node": ">=10"
  },
  "keywords": [
    "clarity",
    "blockstack",
    "smart contract",
    "npm init",
    "npm initializer"
  ],
  "files": [
    "/src",
    "/test",
    "/lib",
    "/cmd"
  ],
  "dependencies": {
    "generator-clarity-dev": "^0.1.13-alpha.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10",
    "@types/yeoman-environment": "^2.3.2",
    "@types/yeoman-generator": "^3.1.4",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "shx": "^0.3.2",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  },
  "nyc": {
    "all": true,
    "cache": false,
    "extension": [
      ".ts"
    ],
    "include": [
      "src"
    ],
    "reporter": [
      "text",
      "lcov"
    ]
  }
}
